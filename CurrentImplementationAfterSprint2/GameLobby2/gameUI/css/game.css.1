body{background-color: #009F50;}
input[type="text"]{padding:0 0 0 5px;border:0;}
/*action bar */
#actionbar{height:100px;background-color:#aaa;padding:5px 0 0 5px; position:fixed; bottom:0px; left:0;}
.action{width:100px;height:95px;background-color:#abcabc;float:left;margin-right:5px;}
    .action:hover{background-color:#abccff;cursor:pointer;}
.action > span{display:table; margin:auto;}
.action > span:first-child{border:1px solid #faffaf;}
/*chat window */
#chat{float:left; width:280px; height:270px; background-color:#aaa; padding: 5px 5px 5px 5px; position:fixed; bottom:0px;right:0;}
#inbox{width:277px;height:235px;background-color:#fff;margin: 0 0 5px 0;padding: 0 0 0 3px;}
    #inbox > .message{color:green;}
    #inbox > .privateMessage{color:red;}
    #inbox > .confirmation{color:gray;}
#outbox{ width:275px;height:30px;background-color:#fff;}

/*player spots for hand, points, and name*/
#playerSpot_0 {position:absolute;left:50%;top:50%;}
#playerSpot_1 {position:absolute;right:25%;top:25%;}
#playerSpot_2 {position:absolute;left:50%;top:0%;}
#playerSpot_3 {position:absolute;left:25%;top:25%;}

.hand + .playerName{}
.playerName + .playerPoints{}

/* hand */
.hand{ height: 155px;}
.hand > .card:nth-child(1){margin-left:0;}
.hand > .card:nth-child(2){margin-left:30px;}
.hand > .card:nth-child(3){margin-left:60px;}
.hand > .card:nth-child(4){margin-left:90px;}
.hand > .card:nth-child(5){margin-left:120px;}


/* card */
.card {
  background-color:#daaaaf;
  border-color: #808080 #000000 #000000 #808080;
  border-width: 1px;
  border-style: solid;
  color: #000000;
  font-size: 23pt;
  position: absolute;
  width:  3.75em;
  height: inherit;
}


.card > div.front{width:100%; height:100%; background-color:white;}

.card.highlight{background-color:#abccff;}
.card > div.front.highlight{background-color:#abccff;}

.card > div.front.red{color:red;}
.card > div.front.black{color:black;}

.card > div.front > .number{
  font-size: 50%;
  font-weight: bold;
  text-align: center;
  position: absolute;
  left: 0.25em;
  top:  0.25em;
}
.card > div.front > .ace {
    font-size: 300%;
    position: absolute;
    left: 0.325em;
    top:  0.250em;
}

.card > div.front > .face {
  border: 1px solid #000000;
  position: absolute;
  left: 0.50em;
  top:  0.45em;
  width:  2.6em;
  height: 4.0em;
}

.card > div.front > .spotA1 { position: absolute; left: 0.60em; top: 0.5em; }
.card > div.front > .spotA2 { position: absolute; left: 0.60em; top: 1.5em; }
.card > div.front > .spotA3 { position: absolute; left: 0.60em; top: 2.0em; }
.card > div.front > .spotA4 { position: absolute; left: 0.60em; top: 2.5em; }
.card > div.front > .spotA5 { position: absolute; left: 0.60em; top: 3.5em; }
.card > div.front > .spotB1 { position: absolute; left: 1.55em; top: 0.5em; }
.card > div.front > .spotB2 { position: absolute; left: 1.55em; top: 1.0em; }
.card > div.front > .spotB3 { position: absolute; left: 1.55em; top: 2.0em; }
.card > div.front > .spotB4 { position: absolute; left: 1.55em; top: 3.0em; }
.card > div.front > .spotB5 { position: absolute; left: 1.55em; top: 3.5em; }
.card > div.front > .spotC1 { position: absolute; left: 2.50em; top: 0.5em; }
.card > div.front > .spotC2 { position: absolute; left: 2.50em; top: 1.5em; }
.card > div.front > .spotC3 { position: absolute; left: 2.50em; top: 2.0em; }
.card > div.front > .spotC4 { position: absolute; left: 2.50em; top: 2.5em; }
.card > div.front > .spotC5 { position: absolute; left: 2.50em; top: 3.5em; }








